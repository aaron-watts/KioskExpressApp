<%- include('partials/head.ejs') %>

    <div class="container-fluid control-section text-center">
        <h1>Register</h1>
        <div class="row">
            <div class="container justify-content-center d-flex align-items-center">
                <div class="d-grid gap-2 col-5 mx-auto">
                    <a href="/register?qty=one" class="btn btn-primary btn-lg btn-xl fs-3">One person</a>
                </div>
                <div class="d-grid gap-2 col-5 mx-auto">
                    <a href="/register?qty=many" class="btn btn-primary btn-lg btn-xl fs-3">A Household</a>
                </div>
            </div>
        </div>
        <div class="info-section">
            <div class="row">
                <p class="fs-1 text-uppercase">Or</p>
            </div>
            <div class="row">
                <p class="fs-3">Tap name to sign in</p>
            </div>
        </div>
    </div>



    <div class="container">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th class="text-center" scope="col">Postcode</th>
                    <th class="text-center" scope="col">Phone</th>
                    <th calss="text-end" scope="col">Sign In</th>
                </tr>
            </thead>
            <tbody>
                <% for (let match of matches) { %>
                    <tr>
                        <td>
                            <%- `${match.firstName} ${match.lastName}` %>
                        </td>
                        <td class="text-center">
                            <%- match.postcode %>
                        </td>
                        <td class="text-center">
                            <%- match.emergencyNumber %>
                        </td>
                        <td class="text-center control">
                            <% if (match.signedIn) { %>
                                <button id="<%- match.id %>" class="btn btn-success signin-btn fs-3">
                                    <i class="bi bi-person-check"></i>
                                </button>
                                <i class="bi bi-check-lg text-success hide"></i>
                                <% } else { %>
                                    <button id="<%- match.id %>" class="btn btn-success signin-btn fs-3 hide">
                                        <i class="bi bi-person-check"></i>
                                    </button>
                                    <i class="bi bi-check-lg text-success"></i>
                                    <% } %>
                        </td>
                    </tr>
                    <% }; if (!matches.length) { %>
                        <tr>
                            <td colspan="4">No matches found, please register</td>
                        </tr>
                        <% } %>
            </tbody>
        </table>
    </div>

